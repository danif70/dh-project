        <label for="contraseña"></label>
        <div class="input">Contraseña</div>
        <input type="password" name="password" id="contraseña" />
        <% if(locals.errors && errors.password){%>
          <p><%=errors.password.msg%></p>
        <%}%>

        <label for="repcontraseña"></label>
        <div class="input">Verificar contraseña</div>
        <input
